<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Quiz Home | Learn & Test</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="bg-gray-100 text-gray-800">

  <!-- Navbar -->
  <nav class="bg-white shadow-md sticky top-0 z-10">
    <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-gray-800">QuizMaster</a>
      <div>
        <% if (username) { %>
          <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-md">Logout</a>
        <% } else { %>
          <a href="/login" class="mr-4 text-gray-700 hover:text-blue-500">Login</a>
          <a href="/register" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md">Register</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="bg-white py-20 shadow-inner">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 mb-4 leading-tight">Sharpen Your Skills with Our Quizzes</h1>
      <p class="text-lg sm:text-xl text-gray-600 mb-6">Practice coding, general knowledge, tech and more ‚Äî one quiz at a time.</p>

      <% if (typeof username !== 'undefined') { %>
        <p class="text-3xl font-semibold text-indigo-600 mb-6">Welcome <%= username %> üëã</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="/quiz" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-lg transition">Ongoing Quizzes</a>
          <a href="/user/results" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg text-lg transition">Show My Results</a>
        </div>
      <% } else { %>
        <a href="/quiz" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg text-lg hover:bg-blue-700 transition">Start Quizzes</a>
      <% } %>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-3xl font-bold mb-10 text-center text-gray-800">Explore Quiz Categories</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

        <% for (let i = 0; i < 6; i++) { %>
          <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition border border-gray-200">
            <img src="https://plus.unsplash.com/premium_photo-1677567996070-68fa4181775a?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8ZWR1Y2F0aW9ufGVufDB8fDB8fHww" alt="Quiz Category" class="w-full h-40 object-cover">
            <div class="p-5">
              <h3 class="text-lg font-semibold text-gray-800 mb-2">Quiz Title <%= i + 1 %></h3>
              <p class="text-gray-600 text-sm mb-4">Challenge yourself with this quiz and test your knowledge!</p>
              <a href="/quiz/<%= i + 1 %>" class="inline-block bg-blue-100 text-blue-700 px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-200 transition">Take Quiz ‚Üí</a>
            </div>
          </div>
        <% } %>

      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-white mt-16 py-6 shadow-inner">
    <div class="max-w-7xl mx-auto px-6 flex flex-col sm:flex-row justify-between items-center text-sm text-gray-500">
      <p>¬© 2025 QuizMaster. All rights reserved.</p>
      <p>Made with ‚ù§Ô∏è using Node.js + PostgreSQL</p>
    </div>
  </footer>

</body>
</html>
