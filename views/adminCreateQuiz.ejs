<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Quiz</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-5xl mx-auto bg-white p-8 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center mb-8 text-blue-700">Create Quiz</h1>

    <form action="/admin/create-quiz" method="POST">
      <input type="hidden" name="marks" value="<%= marks %>">
      <input type="hidden" name="count" value="<%= count %>">

      <div class="mb-6">
        <label class="block text-lg font-semibold mb-2">Quiz Title</label>
        <input type="text" name="title" required class="w-full p-3 border rounded-lg">
      </div>

      <% for (let i = 0; i < count; i++) { %>
        <div class="mb-8 p-4 bg-gray-50 border rounded-lg">
          <h2 class="text-xl font-semibold mb-4 text-gray-700">Question <%= i + 1 %></h2>

          <!-- Question Text -->
          <label class="block mb-1 font-medium text-gray-600">Question</label>
          <input type="text" name="questions[<%= i %>][question]" required class="w-full p-2 border rounded mb-3">

          <!-- Options A-D -->
          <div class="mb-2">
            <label class="font-medium">Option A</label>
            <input type="text" name="questions[<%= i %>][options][]" required class="w-full p-2 border rounded">
          </div>
          <div class="mb-2">
            <label class="font-medium">Option B</label>
            <input type="text" name="questions[<%= i %>][options][]" required class="w-full p-2 border rounded">
          </div>
          <div class="mb-2">
            <label class="font-medium">Option C</label>
            <input type="text" name="questions[<%= i %>][options][]" required class="w-full p-2 border rounded">
          </div>
          <div class="mb-2">
            <label class="font-medium">Option D</label>
            <input type="text" name="questions[<%= i %>][options][]" required class="w-full p-2 border rounded">
          </div>

          <!-- Correct Option -->
          <label class="block mt-4 font-medium text-gray-600">Correct Option (A/B/C/D)</label>
          <input type="text" name="questions[<%= i %>][correct]" maxlength="1" required class="w-20 p-2 border rounded uppercase">
        </div>
      <% } %>

      <!-- Submit Button -->
      <div class="text-center mt-10">
        <button type="submit" class="bg-blue-600 text-white px-8 py-3 rounded-lg text-lg hover:bg-blue-700">
          Submit Quiz
        </button>
      </div>
    </form>
  </div>
</body>
</html>
