<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard | QuizMaster</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800 min-h-screen">

  <!-- Navbar -->
  <nav class="bg-white shadow-md px-6 py-4 flex justify-between items-center">
    <h1 class="text-xl font-bold text-gray-800">QuizMaster Admin</h1>
    <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-md">Logout</a>
  </nav>

  <!-- Flash Messages -->
  <div class="max-w-4xl mx-auto mt-4">
    <% if (success && success.length) { %>
      <div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-2">
        <%= success %>
      </div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-2">
        <%= error %>
      </div>
    <% } %>
  </div>

  <!-- Admin Dashboard -->
  <div class="max-w-5xl mx-auto px-6 py-10">
    
    <!-- Add Participant -->
    <section class="mb-10 bg-white p-6 rounded-lg shadow">
      <h2 class="text-2xl font-semibold mb-4">âž• Add New Participant</h2>
      <form action="/admin/add-user" method="POST" class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <input type="text" name="username" placeholder="Username" class="border border-gray-300 rounded px-4 py-2" required />
        <input type="password" name="password" placeholder="Password" class="border border-gray-300 rounded px-4 py-2" required />
        <input type="number" name="marks" placeholder="Initial Marks" class="border border-gray-300 rounded px-4 py-2" />
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded mt-2 sm:col-span-2">Add Participant</button>
      </form>
    </section>

    <!-- Participant List -->
    <section class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-2xl font-semibold mb-4">ðŸ“‹ Participant Scores</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full bg-white border">
          <thead>
            <tr class="bg-gray-200 text-left text-gray-700 text-sm">
              <th class="py-3 px-4 border-b">#</th>
              <th class="py-3 px-4 border-b">Username</th>
              <th class="py-3 px-4 border-b">Marks</th>
              <th class="py-3 px-4 border-b">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (participants && participants.length > 0) { %>
              <% participants.forEach((p, index) => { %>
                <tr class="hover:bg-gray-50">
                  <td class="py-3 px-4 border-b"><%= index + 1 %></td>
                  <td class="py-3 px-4 border-b"><%= p.username %></td>
                  <td class="py-3 px-4 border-b"><%= p.marks %></td>
                  <td class="py-3 px-4 border-b">
                    <form action="/admin/delete-user/<%= p.id %>" method="POST" onsubmit="return confirm('Delete this user?')">
                      <button class="text-red-600 hover:underline text-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="py-3 px-4 text-center text-gray-500">No participants yet.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>

  </div>

</body>
</html>